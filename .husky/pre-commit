#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”§ Running Prettier on frontend files (excluding ignored files)..."
npx prettier --write --list-different --ignore-path .prettierignore .

echo "ğŸ” Running frontend lint checks..."
npm run lint

echo "ğŸ§¹ Running gofmt on Go files..."
find . -type f -name '*.go' -not -path "./vendor/*" | xargs gofmt -w

echo "ğŸ§ª Running backend tests..."
cd backend
go test ./... -v

echo "âœ… All pre-commit checks passed."
